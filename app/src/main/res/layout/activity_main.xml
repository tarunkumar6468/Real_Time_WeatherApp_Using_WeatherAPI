<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#18FFE4">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="3210dp"
        android:layout_height="2123dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/asd1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:rotation="2"
        android:rotationX="-6"
        android:rotationY="19"
        android:text="Weather APP"
        android:textColor="@color/white"
        android:textFontWeight="10"
        android:textSize="39dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cityName"
        android:layout_width="206dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent"
        android:hint="Enter City"
        android:rotationX="-32"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textSize="36dp" />

    <Button
        android:id="@+id/search"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:rotationY="-32"
        android:text="Search"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:rotation="2"
        android:rotationX="-4"
        android:rotationY="4"
        android:text="Weather Details"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:rotation="11"
        android:rotationX="-28"
        android:rotationY="28"
        android:text=" @tarun6468 08/024"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>